{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file for MacOS",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/${workspaceFolderBasename}-osx.app",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib/macOS",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-network",
                "-lsfml-audio",
                "-Wall",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file for Windows64",
            "command": "/opt/homebrew/Cellar/mingw-w64/11.0.1/toolchain-x86_64/bin/x86_64-w64-mingw32-g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib/Windows",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/${workspaceFolderBasename}-win64.exe",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-network",
                "-lsfml-audio",
                "-m64",
                "-Wall"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}